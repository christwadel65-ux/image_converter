
<Window x:Class="ImageConvertResize.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Converter Pro - Convertisseur &amp; Redimensionneur"
        Height="700" Width="1100" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinHeight="600" MinWidth="900">
    
    <Window.Resources>
        <!-- Couleurs du thÃ¨me -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6C757D"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DEE2E6"/>
        
        <!-- Style des boutons principaux -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style des boutons secondaires -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style des TextBox modernes -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style ComboBox moderne -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <!-- Style CheckBox moderne -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Style GroupBox moderne -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#F8F9FA" 
                                            CornerRadius="6,6,0,0" Padding="12,8">
                                        <ContentPresenter ContentSource="Header" 
                                                        TextElement.FontWeight="SemiBold"
                                                        TextElement.FontSize="14"
                                                        TextElement.Foreground="#212529"/>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#495057"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="12" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- En-tÃªte avec titre -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="6" Padding="12,10" Margin="0,0,0,10"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="ðŸ“¸ Image Converter Pro" FontSize="20" FontWeight="Bold" 
                               Foreground="#212529"/>
                    <TextBlock Text="Convertissez et redimensionnez vos images en batch avec facilitÃ©" 
                               FontSize="12" Foreground="#6C757D" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- EntrÃ©e -->
        <GroupBox Grid.Row="1" Header="ðŸ“ Fichier(s) source" Margin="0,0,0,8">
            <StackPanel Margin="0,8">
                <TextBlock Text="SÃ©lectionnez un fichier ou un dossier Ã  traiter" 
                           FontSize="12" Foreground="#6C757D" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InputPathTextBox" Grid.Column="0" Margin="0,0,8,0"
                             AllowDrop="True" Drop="InputPathTextBox_Drop" DragOver="Preview_DragOver"
                             ToolTip="Glissez-dÃ©posez un fichier ou dossier ici"/>
                    <Button x:Name="BrowseFileButton" Grid.Column="1" Content="ðŸ“„ Fichier" 
                            Margin="0,0,8,0" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="BrowseFolderButton" Grid.Column="2" Content="ðŸ“‚ Dossier"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Sortie -->
        <GroupBox Grid.Row="2" Header="ðŸ’¾ Destination" Margin="0,0,0,8">
            <StackPanel Margin="0,8">
                <TextBlock Text="Choisissez le dossier oÃ¹ enregistrer les images traitÃ©es" 
                           FontSize="12" Foreground="#6C757D" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="OutputDirTextBox" Grid.Column="0" Margin="0,0,8,0" Text="C:\Mes Documents\"/>
                    <Button x:Name="BrowseOutputButton" Grid.Column="1" Content="ðŸ“ Parcourir"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- ParamÃ¨tres -->
        <GroupBox Grid.Row="3" Header="âš™ï¸ ParamÃ¨tres de traitement" Margin="0,0,0,8">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ligne 0 : PrÃ©rÃ©glages de taille -->
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                        Background="#E3F2FD" CornerRadius="4" Padding="12,8" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ PrÃ©rÃ©glages de taille" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <WrapPanel>
                            <Button x:Name="PresetHDButton" Content="HD (1280x720)" 
                                    Margin="0,0,6,0" Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="1280x720"
                                    Style="{StaticResource SecondaryButton}"/>
                            <Button x:Name="PresetFullHDButton" Content="Full HD (1920x1080)" 
                                    Margin="0,0,6,0" Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="1920x1080"
                                    Style="{StaticResource SecondaryButton}"/>
                            <Button x:Name="Preset4KButton" Content="4K (3840x2160)" 
                                    Margin="0,0,6,0" Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="3840x2160"
                                    Style="{StaticResource SecondaryButton}"/>
                            <Button x:Name="PresetInstagramButton" Content="Instagram (1080x1080)" 
                                    Margin="0,0,6,0" Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="1080x1080"
                                    Style="{StaticResource SecondaryButton}"/>
                            <Button x:Name="PresetFacebookButton" Content="Facebook (2048x2048)" 
                                    Margin="0,0,6,0" Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="2048x2048"
                                    Style="{StaticResource SecondaryButton}"/>
                            <Button x:Name="PresetThumbnailButton" Content="Miniature (400x400)" 
                                    Padding="8,4" FontSize="11"
                                    Click="PresetButton_Click" Tag="400x400"
                                    Style="{StaticResource SecondaryButton}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Ligne 1 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Largeur maximale" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <CheckBox Grid.Column="1" x:Name="LockRatioCheckBox" 
                                  ToolTip="Verrouiller le ratio d'aspect" Margin="4,0,0,4"
                                  Checked="LockRatio_Changed" Unchecked="LockRatio_Changed">
                            <TextBlock Text="ðŸ”’" FontSize="10"/>
                        </CheckBox>
                    </Grid>
                    <TextBox x:Name="WidthTextBox" Text="1920" 
                             ToolTip="Largeur maximale en pixels"
                             TextChanged="Dimension_TextChanged"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="Hauteur maximale" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="HeightTextBox" Text="1080" 
                             ToolTip="Hauteur maximale en pixels"
                             TextChanged="Dimension_TextChanged"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,12,12">
                    <TextBlock Text="Mode de redimensionnement" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox x:Name="ResizeModeComboBox"
                              ToolTip="Choisir la faÃ§on de redimensionner l'image"
                              SelectionChanged="ResizeMode_Changed">
                        <ComboBoxItem Content="Ajuster (proportionnel)" IsSelected="True" Tag="Max"/>
                        <ComboBoxItem Content="Remplir (rogner)" Tag="Crop"/>
                        <ComboBoxItem Content="Ã‰tirer (dÃ©former)" Tag="Stretch"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,0,0,12">
                    <TextBlock Text="Format de sortie" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox x:Name="FormatComboBox"/>
                </StackPanel>

                <!-- Ligne 2 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,12">
                    <TextBlock Text="QualitÃ© (JPG/WebP)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="QualityTextBox" Text="85" ToolTip="QualitÃ© de 1 Ã  100"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="RÃ©solution (DPI)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="DpiTextBox" Text="96" ToolTip="Points par pouce"/>
                </StackPanel>

                <!-- Ligne 3 - Options -->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" 
                        Background="#F8F9FA" CornerRadius="4" Padding="12" Margin="0,4,0,0">
                    <StackPanel>
                        <TextBlock Text="Options avancÃ©es" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <CheckBox x:Name="OverwriteCheckBox" Content="Ã‰craser les fichiers existants" 
                                          Margin="0,0,0,6"/>
                                <CheckBox x:Name="KeepNameCheckBox" 
                                          Content="Conserver le nom d'origine (sans suffixe de dimensions)" 
                                          Margin="0,0,0,6"/>
                                <CheckBox x:Name="RecursiveCheckBox" 
                                          Content="Traiter les sous-dossiers rÃ©cursivement"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <CheckBox x:Name="PreserveExifCheckBox" 
                                          Content="PrÃ©server les mÃ©tadonnÃ©es EXIF" 
                                          IsChecked="True"
                                          Margin="0,0,0,6"/>
                                <CheckBox x:Name="AutoRotateCheckBox" 
                                          Content="Rotation automatique selon EXIF"
                                          IsChecked="True"
                                          Margin="0,0,0,6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- AperÃ§u avant / aprÃ¨s avec actions -->
        <Grid Grid.Row="4" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- AperÃ§u Original -->
            <GroupBox Header="ðŸ–¼ï¸ Image originale" Grid.Column="0">
                <Grid Margin="0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="2" CornerRadius="4" Background="White"
                            AllowDrop="True" Drop="PreviewOriginal_Drop" DragOver="Preview_DragOver"
                            MinHeight="180" MaxHeight="250">
                        <Grid>
                            <TextBlock Text="Glissez une image ici ou utilisez les boutons ci-dessus" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="#ADB5BD" FontStyle="Italic"
                                       x:Name="OriginalPlaceholder"/>
                            <Image x:Name="PreviewOriginal" Stretch="Uniform"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="4" 
                            Padding="8,6" Margin="0,8,0,0"
                            x:Name="OriginalInfoPanel" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="OriginalDimensionsText" 
                                       FontSize="11" FontWeight="SemiBold" 
                                       Foreground="#495057"/>
                            <TextBlock x:Name="OriginalSizeText" 
                                       FontSize="11" Foreground="#6C757D" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>
            
            <!-- SÃ©parateur -->
            <Border Grid.Column="1" Background="Transparent"/>
            
            <!-- AperÃ§u TraitÃ© -->
            <GroupBox Header="âœ¨ Image traitÃ©e" Grid.Column="2">
                <Grid Margin="0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="2" CornerRadius="4" Background="White"
                            MinHeight="180" MaxHeight="250">
                        <Grid>
                            <TextBlock Text="L'aperÃ§u apparaÃ®tra ici aprÃ¨s sÃ©lection" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="#ADB5BD" FontStyle="Italic"
                                       x:Name="ProcessedPlaceholder"/>
                            <Image x:Name="PreviewProcessed" Stretch="Uniform"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Background="#E8F5E9" CornerRadius="4" 
                            Padding="8,6" Margin="0,8,0,0"
                            x:Name="ProcessedInfoPanel" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="ProcessedDimensionsText" 
                                       FontSize="11" FontWeight="SemiBold" 
                                       Foreground="#2E7D32"/>
                            <TextBlock x:Name="ProcessedReductionText" 
                                       FontSize="11" Foreground="#558B2F" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    <Button x:Name="SavePreviewButton" Grid.Row="2" 
                            Content="ðŸ’¾ Enregistrer l'aperÃ§u" 
                            Margin="0,12,0,6" Click="SavePreviewButton_Click"
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Stretch"/>
                    <ProgressBar x:Name="ExportProgressBar" Grid.Row="3" 
                                 Height="6" Minimum="0" Maximum="100" Value="0"
                                 Foreground="{StaticResource SuccessBrush}"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Actions + Progress + Journal -->
        <Grid Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Boutons et barre de progression -->
            <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                    CornerRadius="6" Padding="16" Margin="0,0,0,12"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="PrÃªt Ã  traiter vos images" FontWeight="SemiBold" 
                                       x:Name="StatusText"/>
                            <TextBlock Text="Cliquez sur DÃ©marrer pour commencer le traitement" 
                                       FontSize="11" Foreground="#6C757D"
                                       x:Name="StatusSubText"/>
                        </StackPanel>
                        
                        <Button x:Name="StartButton" Grid.Column="1" 
                                Content="â–¶ï¸ DÃ©marrer"
                                Style="{StaticResource PrimaryButton}"
                                Height="40"/>
                        <Button x:Name="CancelButton" Grid.Column="3" 
                                Content="â¹ï¸ Annuler" IsEnabled="False"
                                Height="40">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <ProgressBar x:Name="ProgressBar" Grid.Row="1" 
                                 Height="8"
                                 Foreground="{StaticResource SuccessBrush}"/>
                </Grid>
            </Border>
            
            <!-- Journal -->
            <GroupBox Grid.Row="1" Header="ðŸ“‹ Journal d'activitÃ©" MaxHeight="120">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,8">
                    <TextBox x:Name="LogTextBox" 
                             AcceptsReturn="True" 
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        </Grid>
    </ScrollViewer>
</Window>
